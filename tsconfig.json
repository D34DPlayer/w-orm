{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2017",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "types": [
      "reflect-metadata",
      "node",
      "mocha"
    ],
    "sourceMap": true,
    "outDir": "./dist/lib",
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*"
  ]
}
