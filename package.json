{
  "name": "w-orm",
  "version": "0.1.0",
  "description": "IndexedDB ORM",
  "author": {
    "name": "D34DPlayer",
    "email": "carlos@d34d.one",
    "url": "https://github.com/D34DPlayer"
  },
  "license": "MIT",
  "homepage": "https://github.com/D34DPlayer/w-orm#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/D34DPlayer/w-orm.git"
  },
  "bugs": {
    "url": "https://github.com/D34DPlayer/w-orm/issues"
  },
  "main": "dist/index.umd.js",
  "module": "dist/index.esm.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prebuild": "rimraf dist",
    "build:lib": "tsc --module commonjs",
    "build:dist": "rollup -c rollup.config.mjs",
    "build:docs": "typedoc",
    "build": "pnpm build:lib && pnpm build:dist",
    "start": "rollup -c rollup.config.js -w",
    "serve": "serve .",
    "prepare": "pnpm build",
    "prepublishOnly": "pnpm lint",
    "preversion": "pnpm lint",
    "version": "pnpm lint:fix && git add -A src",
    "postversion": "git push && git push --tags",
    "test": "mocha",
    "test:watch": "mocha --watch --reporter min",
    "test:coverage": "nyc mocha"
  },
  "peerDependencies": {
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.37.0",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@rollup/plugin-commonjs": "^24.0.1",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-typescript": "^11.0.0",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.15.10",
    "@typescript/lib-dom": "npm:@types/web@^0.0.99",
    "chai": "^4.3.7",
    "eslint": "^8.36.0",
    "fake-indexeddb": "^4.0.1",
    "lint-staged": "^13.2.0",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^4.4.1",
    "rollup": "^3.20.2",
    "serve": "^14.2.0",
    "shelljs": "^0.8.5",
    "simple-git-hooks": "^2.8.1",
    "ts-node": "^10.9.1",
    "tslib": "^2.5.0",
    "typedoc": "^0.23.28",
    "typedoc-theme-yaf": "^0.0.4",
    "typescript": "~4.x"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint . --fix"
  }
}
